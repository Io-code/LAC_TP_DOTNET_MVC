@model TPLOCAL1.Models.FormModel
<head>
    <title> HN - TP LOCAL </title>
    <link rel="stylesheet" href="~/resources/Index.css" asp-append-version="true" />
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="Logo HN" />
        <h1>Page de validation</h1>
    </header> 
    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/AvisList">Avis List</a></li>
        </ul>
    </nav>
    <div class="container">
    <table border="1" cellpadding="1" cellspacing="5">
        <tr>
            <th colspan="2">Informations personnelles</th>
        </tr>
        <tr>
            <td>Nom :</td>
            <td>@Model.Nom</td>
        </tr>
        <tr>
            <td>Prénom :</td>
            <td>@Model.Prenom</td>
        </tr>
        <tr>
            <td>Genre :</td>
            <td>@Model.Genre</td>
        </tr>
        <tr>
            <td>Adresse :</td>
            <td>@Model.Adresse</td>
        </tr>
        <tr>
            <td>Code postal :</td>
            <td>@Model.CodePostal</td>
        </tr>
        <tr>
            <td>Ville :</td>
            <td>@Model.Ville</td>
        </tr>
        <tr>
            <td>Email :</td>
            <td>@Model.Email</td>
        </tr>
    </table>

    <table border ="1" cellpadding="1" cellspacing="5">
        <tr>
            <th colspan="2">Informations de formation suivie</th>
        </tr>
        <tr>
            <td>Date de début :</td>
            <td>@Model.DateDebut.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <td>Type de formation :</td>
            <td>@Model.TypeFormation</td>
        </tr>
    </table>

    <table border="1" cellpadding="1" cellspacing="5">
        <tr>
            <th colspan="2">Examens de la formation</th>
        </tr>
        <tr>
            <td>Cobol formation</td>
            <td>@Model.CobolFormation</td>
        </tr>
        <tr>
            <td>C# Formation</td>
            <td>@Model.CSharpFormation</td>
        </tr>
    </table>
    </div>
    
</body>
