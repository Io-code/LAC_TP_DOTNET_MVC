@model TPLOCAL1.Models.FormModel
<head>
    <title> HN - TP LOCAL </title>
    <link rel="stylesheet" href="~/resources/Index.css" asp-append-version="true" />
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="Logo HN" />
        <h1>Formulaire TP HN Avis</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/AvisList">Avis List</a></li>
        </ul>
    </nav>
    <div class="container">
    <form asp-action="ValidationForm" asp-controller="Home" method="post">
    <table border="1" cellspacing="1" cellpadding="5">
        <tr>
            <th colspan="2">Informations personnelles</th>
        </tr>
        <tr>
            <td>Nom :</td>
            <td><input type="text" name="Nom" required /></td>
        </tr>

            <tr>
                <td>Prénom :</td>
                <td><input type="text" name="Prenom" required /></td>
            </tr>
            <tr>
                <td>Genre :</td>
                <td>
                    <select name="Genre">
                        <option>Sélectionnez un sexe</option>
                        <option>Homme</option>
                        <option>Femme</option>
                        <option>Autre</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Adresse :</td>
                <td><input type="text" name="Adresse" /></td>
            </tr>
            <tr>
                <td>Code postal :</td>
                <td><input type="text" name="CodePostal" pattern="\d{5}" /></td>
            </tr>
            <tr>
                <td>Ville :</td>
                <td><input type="text" name="Ville" /></td>
            </tr>
            <tr>
                <td>Email :</td>
                <td>
                    <input type="email" name="Email" />
                    <span asp-validation-for="Email"></span>
                </td>
            </tr>
        </table>

        <table border="1" cellpadding="1" cellspacing="5">
            <tr>
                <th colspan="2">Informations de formation suivie</th>
            </tr>
            <tr>
                <td>Date de début :</td>
                <td><input type="date" name="DateDebut" max="2020-12-31" /></td>
            </tr>
            <tr>
                <td>Type de formation :</td>
                <td>
                    <select name="Formation suivie">
                        <option>Sélectionnez une cours</option>
                        <option>Formation Cobol</option>
                        <option>Formation par objet</option>
                        <option>Formation a double compétence</option>
                    </select>
                </td>
            </tr>
        </table>

        <table border="1" cellpadding="1" cellspacing="5">
            <tr>
                <th colspan="2">Examens de la formation</th>
            </tr>
            <tr>
                <td>Cobol formation</td>
                <td><input type="text" name="CobolFormation" /></td>
            </tr>
            <tr>
                <td>C# formation</td>
                <td><input type="text" name="CSharpFormation" /></td>
            </tr>
        </table>

            <button type="submit">Valider</button>
    </form>
    </div>
</body>

            



